<div class="row">
	<div class="col-xs-3">

	<% if @book.errors.any? %>
      <div id="error_explanation">
        <h2 class="error_count"><%= @book.errors.count %>error prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    	<% end %>
      </ul>
  	<% end %>

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform',book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag @book.user, :profile_image, size:"100x100", fallback: "no-image-mini.jpg" %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<!-- いいね機能 -->
					<% if @book.favorited_by?(current_user) %>
					<td><%= link_to book_favorites_path(@book),method: :delete do %>
						<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
						<%= @book.favorites.count %><% end %>
					</td>
					<% else %>
					<td><%= link_to book_favorites_path(@book),method: :post do %>
						<i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i>
						<%= @book.favorites.count %><% end %>
					</td>
					<% end %>
					<!-- /いいね機能 -->
					<td>コメント数：<%= @book.book_comments.count %></td>
					<% if @book.user.id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>


	<% @book.book_comments.each do |comment| %>
	<div class="comment">
		<%= link_to(comment.user) do %>
		<%= attachment_image_tag comment.user, :profile_image, size:"50x50", fallback: "no-image-mini.jpg" %>
		<%= comment.user.name %>
		<% end %>
		<%= comment.comment %>
		<!-- コメント投稿者＝ログインユーザーの場合削除ボタン -->
			<% if comment.user.id == current_user.id %>
				<%= link_to "Destroy",book_book_comments_path(@book,id: comment.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %>
			<% end %>
	</div>

	<% end %>

	<% if session[:error].present? %>
      <div id="error_explanation">
        <h2 class="error_count"><%= session[:error_count] %>error prohibited this book from being saved:</h2>
      <ul>
        <% session[:error].each do |message| %>
      <li><%= message %></li>
    	<% end %>
      </ul>
      <% session[:error] = nil %>
  	<% end %>

	<%= form_for [@book, @comment] do |f| %>
		<%= f.text_area :comment %>
		<%= f.submit "Comment", class: "btn btn-primary" %>
	<% end %>

	</div>
</div>

</div>

