<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>

	<div class="col-xs-9">


		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to (book.user) do %>
						<%= attachment_image_tag book.user, :profile_image, size:"50x50", fallback: "no-image-mini.jpg" %>
						<% end %>
					</td>
					<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<!-- いいね機能 -->
					<% if book.favorited_by?(current_user) %>
					<td><%= link_to book_favorites_path(book), method: :delete do %>
						<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
						<%= book.favorites.count %><% end %>
					</td>
					<% else %>
					<td><%= link_to book_favorites_path(book),method: :post do %>
						<i class="glyphicon glyphicon-heart-empty" aria-hidden="true"></i>
						<%= book.favorites.count %><% end %>
					</td>
					<% end %>
					<!-- /いいね機能 -->
					<td>コメント数：<%= book.book_comments.count %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--books一覧 -->
	</div>
</div>

